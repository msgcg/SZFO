<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light" style="background-color: #FF0000;">
        <div class="container">
           
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Переключить навигацию" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("РЖД", "Index", "Home", new { area = "" }, new { @class = "nav-link", @style = "color: #FFFFFF;  font-weight: bold;" })</li>
                    <li>@Html.ActionLink("Добавить товар", "Add", "Home", new { area = "" }, new { @class = "nav-link", @style = "color: #FFFFFF;" })</li>
                    <li>@Html.ActionLink("Каталог товаров", "Catalog", "Home", new { area = "" }, new { @class = "nav-link", @style = "color: #FFFFFF;" })</li>
                    <li>@Html.ActionLink("Информация", "About", "Home", new { area = "" }, new { @class = "nav-link", @style = "color: #FFFFFF;" })</li>
                    <li>@Html.ActionLink("Связаться", "Contact", "Home", new { area = "" }, new { @class = "nav-link", @style = "color: #FFFFFF;" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
